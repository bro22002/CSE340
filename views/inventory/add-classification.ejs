<!-- Build the Content Heading using the same value of the <title> built in the contoller -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Build a message block for future proofing of our view -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/add-classification" method="post">
  <fieldset>
    Classification name cannot contain a space or special character <br>
    <label for="classification_name">Add New Classification:</label>
    <input type="text" name="classification_name" id="classification_name" required pattern="[A-Za-z0-9]+" title="Classification name cannot contain a space or special character">
    <input type="submit" value="Add">
    <!-- <button type="submit">Add</button> -->
  </fieldset>
</form>