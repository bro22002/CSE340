<!-- Build the Content Heading using the same value of the <title> built in the contoller -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Build a message block for future proofing of our view -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<p>You're logged in</p>
<% if (locals.loggedin && accountData.account_type === "Client") { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>
  <a href="./update/<%= locals.accountData.account_id %>" title="Click to update account">Edit Account Information</a>
  <% } else { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <h3>Inventory Management</h3>
    <p><a href="../inv" title="Click to manage inventory">Inventory Management</a></p>
    <a href="./update/<%= locals.accountData.account_id %>" title="Click to update account">Edit Account Information</a>
<% } %>


