<!-- Build the Content Heading using the same value of the <title> built in the contoller -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Build a message block for future proofing of our view -->
<%- messages() %>

<fieldset>
    <form action="/" method="post">
        <label for="account_firstname">First name</label><br>
        <input type="text" id="account_firstname" name="account_firstname" placeholder="Enter your first name" required/><br>

        <label for="account_lastname">Last name</label><br>
        <input type="text" id="account_lastname" name="account_lastname"><br>

        <label for="account_email">Email address</label><br>
        <input type="email" name="account_email" id="account_email"><br>

        <label for="account_password">Password</label><br>
        <span>Password must be at least 12 characters and contains at least 1 capital letter, 1 number and 1 special character</span><br>
        <input type="password" name="account_password" id="account_password"><br>
        <input type="submit" value="Register">
    </form>
</fieldset>