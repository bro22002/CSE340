<!-- Build the Content Heading using the same value of the <title> built in the contoller -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Build a message block for future proofing of our view -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<form class="account-form" action="/account/register" method="post">
    <fieldset>
      <div class="form-group">
        <label for="account_firstname">First name</label>
        <input type="text" id="account_firstname" name="account_firstname" placeholder="Enter your first name" required value="<%= locals.account_firstname %>">
      </div>
      <div class="form-group">
        <label for="account_lastname">Last name</label>
        <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
      </div>
      <div class="form-group">
        <label for="account_email">Email address</label>
        <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
      </div>
      <div class="form-group">
        <label for="account_password">Password</label>
        <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <p class="input-hint">Password must be at least 12 characters and contains at least 1 capital letter, 1 number and 1 special character</p>
      </div>
        <input type="submit" value="Register">
    </fieldset>
</form>