<!-- Build the Content Heading using the same value of the <title> built in the contoller -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Build a message block for future proofing of our view -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form class="account-form" action="/account/login" method="post">
  <fieldset>
    <div class="form-group">
      <label for="account_email">Email:</label>
      <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
    </div>
    <div class="form-group">
      <label for="account_password">Password:</label>
      <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </div>
  
    <input class="btn" type="submit" value="LOGIN">
  </fieldset>
  <p>No account?<a href="/account/register">Sign Up</a></p>
  </form>
